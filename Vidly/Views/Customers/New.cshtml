@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))    //this code renders the <form></form> tags
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)  @* Sets/uses a lambda expression Name for the label.  uses "m" as in model as variable *@
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})   @*the "@class" adds the length required in input field*@
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate)  @* Sets/uses a lambda expression Name for the label.  uses "m" as in model as variable *@
        @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control"})   @*the "@class" adds the length required in input field*@
    </div>    
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) Subscribed to Newsletter?
        </label>
    </div>
}