@model Vidly.ViewModels.MoviesFormViewModel

c@{
     ViewBag.Title = Model.Title;
 }

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))    //this code renders the <form></form> tags
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)  @* Sets/uses a lambda expression Name for the label.  uses "m" as in model as variable *@
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })   @*the "@class" adds the length required in input field*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleasedDate)  @* Sets/uses a lambda expression Name for the label.  uses "m" as in model as variable *@
        @Html.TextBoxFor(m => m.Movie.ReleasedDate, "{0:d MMM yyyy}", new { @class = "form-control" })   @*the "@class" adds the length required in input field*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)  @* Sets/uses a lambda expression Name for the label.  uses "m" as in model as variable *@
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })   @*the "@class" adds the length required in input field*@
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)  @* Sets/uses a lambda expression Name for the label.  uses "m" as in model as variable *@
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })   @*the "@class" adds the length required in input field*@
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>  //The "btn-primary" indicates this is the primary submission button
}

